@model ITPE3200X.ViewModels.PostViewModel

<div id="like-save-section-@Model.PostId" class="post-actions">
    <!-- Comment Button -->
    <button type="button" class="btn btn-sm text-white" data-bs-toggle="collapse" data-bs-target="#commentsSection-@Model.PostId" aria-expanded="false" aria-controls="commentsSection-@Model.PostId">
        <i class="bi bi-chat"></i>
        <p>@Model.CommentCount</p>
    </button>

    <!-- Like Button -->
    <form asp-action="ToggleLike" asp-controller="Home" asp-route-postId="@Model.PostId" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#like-save-section-@Model.PostId" class="d-inline">
        @Html.AntiForgeryToken()
        @if (Model.IsLikedByCurrentUser)
        {
            <button type="submit" name="isLike" value="false" class="btn btn-sm text-white">
                <i class="bi bi-heart-fill text-danger"></i>
                <p>@Model.LikeCount</p>
            </button>
        }
        else
        {
            <button type="submit" name="isLike" value="true" class="btn btn-sm text-white">
                <i class="bi bi-heart"></i>
                <p>@Model.LikeCount</p>
            </button>
        }
    </form>

    <!-- Save Button -->
    <form asp-action="ToggleSave" asp-controller="Home" asp-route-postId="@Model.PostId" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#like-save-section-@Model.PostId" class="d-inline">
        @Html.AntiForgeryToken()
        @if (Model.IsSavedByCurrentUser)
        {
            <button type="submit" name="isSave" value="false" class="btn btn-sm text-white">
                <i class="bi bi-bookmark-fill"></i>
            </button>
        }
        else
        {
            <button type="submit" name="isSave" value="true" class="btn btn-sm text-white">
                <i class="bi bi-bookmark"></i>
            </button>
        }
    </form>
</div>