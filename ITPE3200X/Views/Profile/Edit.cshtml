@model ITPE3200X.Models.ApplicationUser

@{
ViewData["Title"] = "Rediger Profil";
}

<div class="edit-profile-page">
    <h2>Rediger Profil</h2>

    <form asp-action="Edit" asp-controller="Profile" method="post">
        <div class="form-group">
            <label for="profilePictureUrl">Profilbilde URL</label>
            <input type="text" class="form-control" id="profilePictureUrl" name="ProfilePictureUrl" value="@Model.ProfilePictureUrl" />
        </div>

        <div class="form-group">
            <label for="bio">Bio</label>
            <textarea class="form-control" id="bio" name="Bio">@Model.Bio</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Lagre Endringer</button>
    </form>
</div>




