@model ITPE3200X.Models.ApplicationUser

@{
ViewData["Title"] = "Edit Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body class="vw-100 overflow-hidden">
<div class="container">
    <div class="row vh-100 align-items-center" style="padding-bottom: 12em">
        <div class="col-md-8 text-md-start text-center">
            <h2 class="px-4" style="color: #7cbeea;">Edit Profile</h2>
            <form asp-action="Edit" asp-controller="Profile" method="post" class="card bg-transparent text-dark p-4 border-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="profilePictureUrl" name="ProfilePictureUrl" placeholder="Profile Picture URL" value="@Model.ProfilePictureUrl" />
                    <label for="profilePictureUrl">Profile Picture URL</label>
                    <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea class="form-control" id="bio" name="Bio" placeholder="Bio">@Model.Bio</textarea>
                    <label for="bio">Bio</label>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <button type="submit" class="btn loginbtn-primary btn-lg w-100">Save Changes</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>