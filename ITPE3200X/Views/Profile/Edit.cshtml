@model ITPE3200X.ViewModels.EditProfileViewModel

@{
ViewData["Title"] = "Edit Profile";
}

<div class="container">
    <div class="row vh-100 align-items-center" style="padding-bottom: 12em">
        <div class="col-md-8 text-md-start text-center">
            <h2 class="px-4" style="color: #7cbeea;">Edit Profile</h2>
            <form asp-action="Edit" asp-controller="Profile" method="post" enctype="multipart/form-data" class="card bg-transparent text-dark p-4 border-0">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Display Current Profile Picture or Icon -->
                <div class="mb-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <i class="bi bi-person-circle" style="font-size: 150px; color: #7cbeea;"></i>
                    }
                </div>

                <!-- Upload New Profile Picture -->
                <div class="mb-3">
                    <label for="imageFile" class="form-label text-white">Upload New Profile Picture</label>
                    <input type="file" class="form-control" id="imageFile" name="ImageFile" accept="image/*" />
                    @Html.ValidationMessage("ImageFile", "", new { @class = "text-danger" })
                </div>

                <div class="form-floating mb-3">
                    <textarea class="form-control" id="bio" name="Bio" placeholder="Bio">@Model.Bio</textarea>
                    <label for="bio">Create your Bio</label>
                    @Html.ValidationMessage("Bio", "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn loginbtn-primary btn-lg w-100">Save Changes</button>
            </form>
        </div>
    </div>
</div>