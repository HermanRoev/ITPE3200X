@model ITPE3200X.Models.ApplicationUser

<div class="profile-page">
    <div class="profile-header">
        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
        {
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle profile-picture" />
        }
        else
        {
            <div class="text-white d-block">
                <i class="bi bi-person fs-1"></i>
            </div>
        }
        <h1>@Model.UserName </h1>
        <p>@Model.Bio </p>
    </div>

    <div class="profile-stats">
        <span>@Model.Followers?.Count følgere</span>
        <span>@Model.Following?.Count følger</span>
    </div>

    <div class="profile-details">
        <p>Email: @Model.Email </p>
    </div>

    <div class="profile-edit-page">
        <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">Rediger Profil</a>
    </div>
</div>









