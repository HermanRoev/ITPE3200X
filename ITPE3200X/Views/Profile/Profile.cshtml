@model ITPE3200X.ViewModels.ProfileViewModel;

<div class="profile-page">
    <div class="profile-header">
        @if (!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
        {
        <img src="@Model.User.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle profile-picture" />
        }
        else
        {
        <div class="text-white d-block">
            <i class="bi bi-person fs-1"></i>
        </div>
        }
        <h1>@Model.User.UserName </h1>
        <p>@Model.User.Bio </p>
    </div>

    <div class="profile-stats">
        <span>@Model.Posts?.Count Posts</span>
        <span>@Model.User.Followers?.Count Followers</span>
        <span>@Model.User.Following?.Count Following</span>
    </div>

    <div class="profile-details">
        <p>Email: @Model.User.Email </p>
    </div>
    
    @if (Model.IsCurrentUserProfile)
    {
    <div class="profile-edit-page">
        <a class="btn loginbtn-primary" asp-controller="Profile" asp-action="Edit">Edit Profile</a>
        <a class="btn btn-secondary" asp-controller="Profile" asp-action="CreatePost">Create Post</a>
    </div>
    }
    else
    {
        if (Model.IsFollowing)
        {
        <div class="profile-follow">
            <form asp-controller="Profile" asp-action="Unfollow" method="post">
                <input type="hidden" name="username" value="@Model.User.UserName" />
                <button type="submit" class="btn loginbtn-primary">Unfollow</button>
            </form>
        </div>
        }
        else
        {
        <div class="profile-follow">
            <form asp-controller="Profile" asp-action="Follow" method="post">
                <input type="hidden" name="username" value="@Model.User.UserName" />
                <button type="submit" class="btn loginbtn-primary">Follow</button>
            </form>
        </div>
        }
    }

    <div class="profile-posts">
        <h3>User Posts</h3>
        @if (Model.Posts != null && Model.Posts.Any())
        {
            <div class="container">
                <div class="row row-cols-1 row-cols-md-3 g-3">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col">
                            <div class="card h-100 border-0">
                                <!-- Link image to modal -->
                                <a href="#" data-bs-toggle="modal" data-bs-target="#postModal-@post.PostId">
                                    <img src="@post.Images.FirstOrDefault()?.ImageUrl" alt="Post Image" class="card-img-top" style="width: 100%; aspect-ratio: 3/4; object-fit: contain; background-color: black;"/>
                                </a>
                            </div>
                        </div>

                        <!-- Modal for the post -->
                        <div class="modal fade" id="postModal-@post.PostId" tabindex="-1" aria-labelledby="postModalLabel-@post.PostId" aria-hidden="true">
                            <div class="modal-dialog modal-xl modal-dialog-centered">
                                <div class="modal-content">
                                    <partial name="_PostPartial" model="post"/>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <p>No posts to show</p>
        }
    </div>
</div>
