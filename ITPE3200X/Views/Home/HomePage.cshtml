@model ITPE3200X.ViewModels.HomeViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

<div class="container w-100">
    <!-- Row to hold multiple posts, displayed as a grid -->
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var post in Model.Posts)
        {
            <div class="col">
                <div class="card mb-3" style="background-color: rgba(124,190,234,0.08)">
                    <!-- Post Container -->
                    <div class="post-container mt-3 mb-3">
                        <!-- Triple-dot Dropdown Menu -->
                        @if (post.IsOwnedByCurrentUser)
                        {
                        <div class="dropdown post-options">
                            <button class="btn btn-link text-white p-0 m-0" type="button" id="postOptionsMenu-@post.PostId" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="postOptionsMenu-@post.PostId">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Home" asp-action="Edit" asp-route-postId="@post.PostId">
                                        <i class="bi bi-pencil me-2"></i> Edit
                                    </a>
                                </li>
                                <li>
                                    <form asp-action="DeletePost" asp-controller="Home" asp-route-postId="@post.PostId" asp-route-homefeed="true" method="post" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                        <button type="submit" class="dropdown-item d-flex align-items-center">
                                            <i class="bi bi-trash me-2 text-danger"></i> Delete
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                        }

                        <!-- Post Images Carousel -->
                        <div id="carouselPostImages-@post.PostId" class="carousel slide">
                            @if (post.Images.Count > 1)
                            {
                            <div class="carousel-indicators" style="position: absolute; top: 10px;">
                                @for (int i = 0; i < post.Images.Count; i++)
                                {
                                <button type="button" data-bs-target="#carouselPostImages-@post.PostId" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                                }
                            </div>
                            }

                            <div class="carousel-inner">
                                @for (int i = 0; i < post.Images.Count; i++)
                                {
                                var image = post.Images.ElementAt(i);
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@image.ImageUrl" class="d-block w-100" alt="Post Image" style="width: 100%; aspect-ratio: 3/4; object-fit: contain; background-color: black;">
                                </div>
                                }
                            </div>

                            @if (post.Images.Count > 1)
                            {
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselPostImages-@post.PostId" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselPostImages-@post.PostId" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                            }
                        </div>

                        <!-- Profile Info and Actions -->
                        <div class="overlay-elements">
                            <div class="profile-info align-items-center">
                                <a class="nav-link" asp-controller="Profile" asp-action="Profile" asp-route-username="@post.UserName">
                                    @if (string.IsNullOrEmpty(post.ProfilePicture))
                                    {
                                    <i class="bi bi-person-circle" style="font-size: 2rem; color: #7cbeea;"></i>
                                    <span class="username-post">@post.UserName</span>
                                    }
                                    else
                                    {
                                    <img src="@(post.ProfilePicture)" alt="Profile Picture" class="rounded-circle profile-picture-post">
                                    <span class="username-post">@post.UserName</span>
                                    }
                                </a>
                            </div>

                            <!-- Like and Save Icons -->
                            <div class="post-actions">
                                <button type="button" class="btn btn-sm text-white" data-bs-toggle="collapse" data-bs-target="#commentsSection-@post.PostId" aria-expanded="false" aria-controls="commentsSection-@post.PostId">
                                    <i class="bi bi-chat"></i>
                                    <p>@post.CommentCount</p>
                                </button>

                                <form asp-action="ToggleLike" asp-controller="Home" asp-route-postId="@post.PostId" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#post-@post.PostId" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    @if (post.IsLikedByCurrentUser)
                                    {
                                    <button type="submit" name="isLike" value="false" class="btn btn-sm text-white">
                                        <i class="bi bi-heart-fill text-danger"></i>
                                        <p>@post.LikeCount</p>
                                    </button>
                                    }
                                    else
                                    {
                                    <button type="submit" name="isLike" value="true" class="btn btn-sm text-white">
                                        <i class="bi bi-heart"></i>
                                        <p>@post.LikeCount</p>
                                    </button>
                                    }
                                </form>

                                <form asp-action="ToggleSave" asp-controller="Home" asp-route-postId="@post.PostId" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#post-@post.PostId" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    @if (post.IsSavedByCurrentUser)
                                    {
                                    <button type="submit" name="isSave" value="false" class="btn btn-sm text-white">
                                        <i class="bi bi-bookmark-fill"></i>
                                    </button>
                                    }
                                    else
                                    {
                                    <button type="submit" name="isSave" value="true" class="btn btn-sm text-white">
                                        <i class="bi bi-bookmark"></i>
                                    </button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Post Content and Comments -->
                    <div class="post-content mt-2 mb-3">
                        <div>
                            @if (!string.IsNullOrEmpty(post.Content) && post.Content.Length > 100)
                            {
                            <p id="postContentShort-@post.PostId">
                                @post.Content.Substring(0, 100)...
                                <a style="color: #76b5e0; cursor: pointer;" onclick="showFullContent('@post.PostId')">Read more</a>
                            </p>
                            <p id="postContentFull-@post.PostId" style="display: none;">
                                @post.Content
                                <a style="color: #76b5e0; cursor: pointer;" onclick="showShortContent('@post.PostId')">Show less</a>
                            </p>
                            }
                            else
                            {
                            <p>@post.Content</p>
                            }
                        </div>

                        <!-- Comments Section -->
                        <div class="collapse" id="commentsSection-@post.PostId">
                            <div id="comments-section-@post.PostId">
                                <ul class="list-group list-group-flush">
                                    @foreach (var comment in post.Comments)
                                    {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span><strong>@comment.UserName</strong> @comment.Content</span>
                                        <span class="d-flex gap-3">
                                            <small class="text-muted text-nowrap">@comment.TimeSincePosted</small>
                                            @if (@comment.IsCreatedByCurrentUser)
                                            {
                                            <form asp-action="DeleteComment" asp-controller="Home" asp-route-postId="@post.PostId" asp-route-commentId="@comment.CommentId" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#post-@post.PostId">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-link p-0">
                                                    <i class="bi bi-trash text-danger"></i>
                                                </button>
                                            </form>
                                            }
                                        </span>
                                    </li>
                                    }
                                </ul>

                                <!-- Add Comment Form -->
                                @if (SignInManager.IsSignedIn(User))
                                {
                                <form asp-action="AddComment" asp-controller="Home" asp-route-postId="@post.PostId" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#post-@post.PostId" class="comment-form">
                                    @Html.AntiForgeryToken()
                                    <div class="input-group mt-3">
                                        <input type="text" name="Content" class="form-control bg-dark text-white border-dark" placeholder="Add a comment..." required />
                                        <button type="submit" class="btn loginbtn-primary">Post</button>
                                    </div>
                                </form>
                                }
                                else
                                {
                                <div class="alert alert-info mt-3 bg-dark text-white border-0" role="alert">
                                    <a href="/Identity/Account/Login" style="color: #7cbeea !important;">Log in</a> to add a comment.
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>