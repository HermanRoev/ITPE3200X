@page
@model ForgotPasswordModel
@{
ViewData["Title"] = "Forgot your password?";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body class="vw-100 overflow-hidden">
<a asp-page="/Index" class="btn-close btn-close-white" aria-label="Close" style="position: absolute; top: 2rem; left: 2rem; font-size: 1.8rem;"></a>
<div class="container vh-100 align-content-center">
    <div class="row justify-content-center">
        <div class="col-md-8 pt-4 text-center">
            <h2 class="mb-3" style="color: #7cbeea">Forgot Your Password?</h2>
            <p class="lead mb-4">Enter your email to reset your password.</p>

            <form method="post" class="card bg-transparent text-dark p-4 border-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Validation Summary -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com">
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn loginbtn-primary btn-lg w-100">Reset Password</button>
                <div class="mt-3 text-center">
                    <a asp-page="./LoginPage" class="btn btn-lg w-100 px-4 py-2 loginbtn-secondary" role="button">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
<style>
    .navbar, .footer, #side-menu-row {
        display: none !important;
    }

    .row {
        justify-content: center !important;
    }

    #forgot-password {
        color: #7CBEEA !important;
        text-underline: none !important;
    }

    #forgot-password:hover {
        color: #76b5e0 !important;
    }
</style>
@section Scripts {
<partial name="_ValidationScriptsPartial"/>
}
</html>