@page
@model LoginModel

@{
ViewData["Title"] = "Log in/register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body class="vh-100">
<a asp-page="/Index" class="btn-close btn-close-white" aria-label="Close" style="position: absolute; top: 2rem; left: 2rem; font-size: 1.8rem;"></a>
<div class="container">
    <div class="row vh-100 justify-content-center align-items-center" style="padding-bottom: 5em"> <!-- Have to add padding to counter margin from main because of nav. Works with align-items for a responsive page. Other solutions are not responsive -->
        <div class="col-md-8 text-center">
            <img src="~/Icons-images/kage_welcome_vector.png" alt="Vector Image" class="img-fluid my-2" style="height: 26rem">
            <h2 class="mb-3" style="color: #76b5e0;">Share Your World, Discover Others</h2>
            <p class="lead mb-4">Dive into a universe of images and ideas, where your creativity brings us together</p>

            <form id="account" method="post" class="card bg-transparent text-light p-4 border-0">
                <div class="mt-3 text-center">
                    <a asp-page="./LoginPage" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-lg me-1 px-4 py-2 loginbtn-primary" role="button">Login</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-lg ms-1 px-4 py-2 loginbtn-secondary" role="button">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
<style>
    .navbar, .footer, #side-menu-row {
        display: none !important;
    }

    .loginbtn-primary, .loginbtn-secondary {
        width: 36% !important;
    }
    
    .row {
        justify-content: center !important;
    }
</style>
</html>