@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body class="bg-dark text-white">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <img src="~/Icons-images/kage_welcome_vector.png" alt="Vector Image" class="img-fluid my-2" style="height: 3rem">
            <h2 class="mb-3">Share Your World, Discover Others</h2>
            <p class="lead mb-4">Dive into a universe of images and ideas, where your creativity brings us together</p>

            <form id="account" method="post" class="card bg-transparent text-light p-4 border-0">
                <h4 class="mb-3">Use a local account to log in.</h4>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com">
                    <label asp-for="Input.Email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password">
                    <label asp-for="Input.Password">Password</label>
                </div>
                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100">Log in</button>
                <div class="mt-3 text-center">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary">Forgot your password?</a><br>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Register as a new user</a><br>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-primary">Resend email confirmation</a>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>