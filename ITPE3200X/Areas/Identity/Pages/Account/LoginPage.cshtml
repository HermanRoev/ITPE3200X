@page
@model LoginModel
@inject SignInManager<ApplicationUser> SignInManager

@{
ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body class="vw-100 overflow-hidden">
<a asp-page="/Index" class="btn-close btn-close-white" aria-label="Close" style="position: absolute; top: 2rem; left: 2rem; font-size: 1.8rem;"></a>
<div class="container">
    <div class="row vh-100 justify-content-center align-items-center" style="padding-bottom: 5em">
        <div class="col-md-8 text-center">
            <h2 class="mb-3" style="color: #7cbeea">Login Here</h2>
            <p class="lead mb-4">Welcome back you’ve been missed!</p>

            <form id="account" method="post" class="card bg-transparent text-dark p-4 border-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Validation Summary -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="username">
                    <label asp-for="Input.Username">Username</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password">
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-4 text-end">
                    <a id="colored-link" asp-page="./ForgotPassword" class="text-primary">Forgot your password?</a><br>
                </div>
                <button id="login-submit" type="submit" class="btn loginbtn-primary btn-lg w-100">Sign in</button>
                <div class="mt-3 text-center">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn loginbtn-secondary btn-lg w-100" role="button">Register</a>
                </div>
            </form>
            <!-- * This is the external login part, which is not implemented in this project (we could maybe find some API´s? -->
        </div>
    </div>
</div>
</body>
<style>
    .navbar, .footer, #side-menu-row {
        display: none !important;
    }

    .row {
        justify-content: center !important;
    }

    #colored-link{
        color: #7CBEEA !important;
        text-underline: none !important;
    }

    #colored-link:hover {
        color: #76b5e0 !important;
    }
</style>
@section Scripts {
<partial name="_ValidationScriptsPartial"/>
}
</html>