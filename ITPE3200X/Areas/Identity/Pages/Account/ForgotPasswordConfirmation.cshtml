@page
@model ForgotPasswordConfirmation
@{
ViewData["Title"] = "Forgot password confirmation";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const inputs = document.querySelectorAll('#pinInput input');

            // Handle input event for all inputs
            inputs.forEach((input, idx) => {
                input.addEventListener('input', () => {
                    if (input.value.length === 1 && idx < inputs.length - 1) {
                        inputs[idx + 1].focus(); // Move to next field
                    }
                });

                // Handle backspace for all inputs
                input.addEventListener('keydown', (e) => {
                    if (e.key === "Backspace" && idx > 0 && input.value === '') {
                        inputs[idx - 1].focus(); // Move to previous field
                    }
                });
            });
        });
    </script>
</head>
<body class="vw-100 overflow-hidden">
<a asp-page="/Index" class="btn-close btn-close-white" aria-label="Close" style="position: absolute; top: 2rem; left: 2rem; font-size: 1.8rem;"></a>
<div class="container">
    <div class="row vh-100 justify-content-center align-items-center" style="padding-bottom: 4em">
        <div class="col-md-8 text-center">
            <img src="~/Icons-images/email-vector.png" alt="Vector Image" class="img-fluid my-2" style="height: 14rem">
            <h2 class="mb-3" style="color: #7cbeea">Verification Code</h2>
            <p class="lead mb-4">Enter the 4-digit code we’ve sent to your email.</p>

            <form method="post" asp-page="./ResetPassword" class="card bg-transparent text-dark p-4 border-0">
                <div id="pinInput" class="row mb-3 gx-2 justify-content-center">
                    <div class="col-auto">
                        <input type="text" class="form-control text-center form-control-lg" maxlength="1">
                    </div>
                    <div class="col-auto">
                        <input type="text" class="form-control text-center form-control-lg" maxlength="1">
                    </div>
                    <div class="col-auto">
                        <input type="text" class="form-control text-center form-control-lg" maxlength="1">
                    </div>
                    <div class="col-auto">
                        <input type="text" class="form-control text-center form-control-lg" maxlength="1">
                    </div>
                </div>
                <a href="#" id="colored-link" class="mb-3 text-primary">Didn’t get the code? Click to resend</a>
                <button type="submit" class="btn loginbtn-primary btn-lg w-100">Verify</button>
                <button type="button" class="btn loginbtn-secondary btn-lg w-100 mt-2" onclick="location.href='@Url.Page("/Index")'">Cancel</button>
            </form>
        </div>
    </div>
</div>
</body>
<style>
    .navbar, .footer, #side-menu-row {
        display: none !important;
    }

    .row {
        justify-content: center !important;
    }

    .form-control {
        max-width: 60px;
        padding: 0.5rem;
        font-size: 1.5rem;
        letter-spacing: 2px;
    }

    #colored-link{
        color: #7CBEEA !important;
        text-underline: none !important;
    }

    #colored-link:hover {
        color: #76b5e0 !important;
    }
    
</style>
@section Scripts {
<partial name="_ValidationScriptsPartial"/>
}
</html>